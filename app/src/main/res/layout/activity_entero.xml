<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CampoEntero">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/verde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/campo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp"
        android:background="@drawable/campo_entero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/Menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/campo" />

    <ImageButton
        android:id="@+id/jugada"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/jugada"
        app:layout_constraintStart_toEndOf="@+id/Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/campo"
        android:layout_marginStart="50dp"/>

    <ImageButton
        android:id="@+id/jugador"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/baseline_circle_24"
        app:layout_constraintStart_toEndOf="@+id/jugada"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/campo"
        android:layout_marginStart="50dp"/>

    <ImageButton
        android:id="@+id/lineas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/baseline_call_made_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jugador"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="0.9dp"
        />

    <ImageButton
        android:id="@+id/goma"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/goma_de_borrar"
        app:layout_constraintStart_toEndOf="@id/lineas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jugada"
        android:layout_marginStart="50dp"
        android:layout_marginVertical="0.9dp"
        />

    <ImageButton
        android:id="@+id/brush"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/brush"
        app:layout_constraintStart_toEndOf="@id/goma"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jugador"
        android:layout_marginStart="50dp"
        android:layout_marginVertical="0.9dp"
        />

    <ImageView
        android:id="@+id/banquillo"
        android:layout_width="750dp"
        android:layout_height="150dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/ic_launcher_background"
        app:layout_constraintStart_toEndOf="@id/brush"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/campo"
        android:layout_marginStart="150dp"
        android:layout_marginVertical="0.9dp"

        />


    <ImageButton
        android:id="@+id/editar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/editar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/jugador"
        app:layout_constraintTop_toBottomOf="@id/campo" />
    <ImageButton
        android:id="@+id/play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/play"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editar"
        app:layout_constraintTop_toBottomOf="@id/campo" />
    <ImageButton
        android:id="@+id/pausar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/pausar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/play"
        app:layout_constraintTop_toBottomOf="@id/campo" />
    <ImageButton
        android:id="@+id/palante"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/palante"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pausar"
        app:layout_constraintTop_toBottomOf="@id/campo" />

    <ImageButton
        android:id="@+id/patra"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/patra"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/palante"
        app:layout_constraintTop_toBottomOf="@id/campo" />

    <ImageButton
        android:id="@+id/guardar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="false"
        android:background="@drawable/save"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/patra"
        app:layout_constraintTop_toBottomOf="@id/campo" />

    <com.example.pizarra_tactica.Dibujo
